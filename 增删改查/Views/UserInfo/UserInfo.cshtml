@model IEnumerable<增删改查.Models.UserInfo>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <div>
        <table>
            <tr>
                <th>ID</th>
                <th>姓名</th>
                <th>密码</th>
                <th>修改</th>
                <th>删除</th>
            </tr>
            @if (Model != null)
            {
                if (Model.Count() > 0)
                {
                    foreach (var userinfo in Model)
                    {
            <tr>
                <td>@userinfo.UID</td>
                <td>@userinfo.UName</td>
                <td>@userinfo.UPassWord</td>
                <td>@Html.ActionLink("修改", "Update", new { id = userinfo.UID })</td>
                <td>@Html.ActionLink("删除","Delete",new { id = userinfo.UID })</td>
            </tr>
                    }
                }
            }
        </table>
        @Html.ActionLink("添加用户","Add","UserInfo",null)
    </div>
</body>
</html>
